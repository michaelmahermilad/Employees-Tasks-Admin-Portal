generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
    role      String?
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String?
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus  @default(PENDING)
  employeeId  Int
  employee    Employee    @relation(fields: [employeeId], references: [id])
  createdAt   DateTime    @default(now())
  completedAt DateTime?
}
